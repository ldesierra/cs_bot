<div class="min-h-screen bg-black flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-bold text-white">Welcome Back</h2>
      <p class="mt-2 text-sm text-gray-400">Sign in to your account</p>
    </div>

    <div class="bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-2xl p-8 shadow-2xl">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-700 rounded bg-gray-800" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-300" %>
            </div>
          <% end %>
        </div>

        <div>
          <%= f.submit "Sign In", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-black bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-200 transform hover:scale-105 cursor-pointer" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
