<div class="min-h-screen bg-black flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-bold text-white">Reset Off-Skin Balance</h2>
      <p class="mt-2 text-sm text-gray-400">Update your off-skin balance for trading</p>
    </div>

    <div class="bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-2xl p-8 shadow-2xl">
      <%= form_with(url: off_skin_balance_path, method: :patch, local: true, class: "space-y-6") do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-900 border border-red-400 text-red-100 px-4 py-3 rounded">
            <h4><%= pluralize(@user.errors.count, "error") %> prohibited this update:</h4>
            <ul class="mt-2">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-4">
          <div>
            <label for="off_skin_balance" class="block text-sm font-medium text-gray-300 mb-2">
              Off-Skin Balance ($)
            </label>
            <%= form.number_field :off_skin_balance,
                value: @user.off_skin_balance,
                step: 0.01,
                min: 0,
                class: "w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200" %>
            <p class="text-xs text-gray-500 mt-1">Enter your current off-skin balance</p>
          </div>
        </div>

        <div class="flex space-x-4">
          <%= form.submit "Update Balance",
                class: "flex-1 bg-orange-500 hover:bg-orange-600 text-black font-medium py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-105 cursor-pointer" %>

          <%= link_to "Cancel", root_path,
                class: "flex-1 bg-gray-600 hover:bg-gray-500 text-white font-medium py-3 px-4 rounded-lg transition-all duration-200 cursor-pointer text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
