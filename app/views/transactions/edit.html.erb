<div class="min-h-screen bg-black flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-white">
        Edit Transaction
      </h2>
      <p class="mt-2 text-center text-sm text-gray-400">
        Update your transaction details
      </p>
    </div>

    <%= form_with(model: @transaction, local: true, class: "mt-8 space-y-6") do |form| %>
      <% if @transaction.errors.any? %>
        <div class="bg-red-900 border border-red-400 text-red-100 px-4 py-3 rounded">
          <h4><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h4>
          <ul class="mt-2">
            <% @transaction.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <!-- Buy Price -->
        <div>
          <%= form.label :buy_price, "Buy Price ($)", class: "block text-sm font-medium text-gray-300" %>
          <%= form.number_field :buy_price,
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-400 text-white bg-gray-800 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500 focus:z-10 sm:text-sm",
                placeholder: "Enter buy price",
                step: 0.01,
                required: true %>
        </div>

        <!-- Sell Price -->
        <div>
          <%= form.label :sell, "Sell Price ($)", class: "block text-sm font-medium text-gray-300" %>
          <%= form.number_field :sell,
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-400 text-white bg-gray-800 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500 focus:z-10 sm:text-sm",
                placeholder: "Enter sell price (optional)",
                step: 0.01 %>
        </div>

        <!-- Item Details -->
        <div class="border-t border-gray-700 pt-4">
          <h3 class="text-lg font-medium text-white mb-4">Item Details</h3>

          <%= form.fields_for :item do |item_form| %>
            <!-- Item Name -->
            <div class="mb-4">
              <%= item_form.label :name, "Item Name", class: "block text-sm font-medium text-gray-300" %>
              <%= item_form.text_field :name,
                    class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-400 text-white bg-gray-800 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500 focus:z-10 sm:text-sm",
                    placeholder: "e.g., AK-47 Redline",
                    required: true %>
            </div>

            <!-- Float -->
            <div class="mb-4">
              <%= item_form.label :float, "Float Value", class: "block text-sm font-medium text-gray-300" %>
              <%= item_form.number_field :float,
                    class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-400 text-white bg-gray-800 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500 focus:z-10 sm:text-sm",
                    placeholder: "0.00",
                    step: 0.0001,
                    min: 0,
                    max: 1,
                    required: true %>
            </div>

            <!-- Fade -->
            <div class="mb-4">
              <%= item_form.label :fade, "Fade %", class: "block text-sm font-medium text-gray-300" %>
              <%= item_form.number_field :fade,
                    class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-400 text-white bg-gray-800 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500 focus:z-10 sm:text-sm",
                    placeholder: "0",
                    step: 0.1,
                    min: 0,
                    max: 100 %>
            </div>

            <!-- Blue -->
            <div class="mb-4">
              <%= item_form.label :blue, "Blue %", class: "block text-sm font-medium text-gray-300" %>
              <%= item_form.number_field :blue,
                    class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-400 text-white bg-gray-800 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500 focus:z-10 sm:text-sm",
                    placeholder: "0",
                    step: 0.1,
                    min: 0,
                    max: 100 %>
            </div>

            <!-- Stickers -->
            <div class="mb-4">
              <%= item_form.label :stickers, "Stickers", class: "block text-sm font-medium text-gray-300" %>
              <%= item_form.text_area :stickers,
                    class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-400 text-white bg-gray-800 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500 focus:z-10 sm:text-sm",
                    placeholder: "List stickers separated by commas",
                    rows: 3 %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="flex space-x-4">
        <%= form.submit "Update Transaction",
              class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-black bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-200 transform hover:scale-105 cursor-pointer" %>

        <%= link_to "Cancel", root_path,
              class: "group relative w-full flex justify-center py-2 px-4 border border-gray-600 text-sm font-medium rounded-md text-gray-300 bg-gray-800 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
